(defun curve:bulge2o (pt1 pt2 bulge / b x1 y1 x2 y2)
  "求凸度bulge 和两点 pt1 pt2 表示的弧的圆心。"
  (setq b (* 0.5 (- (/ 1.0 bulge)
        bulge)))
  (setq x1 (car pt1)
    y1 (cadr pt1)
    x2 (car pt2)
    y2 (cadr pt2)
    z1 (caddr pt1)
    z2 (caddr pt2))
  (if z1
      (list (* 0.5 (- (+ x1 x2)
		      (* b (- y2 y1))))
	    (* 0.5 (+ (+ y1 y2)
		      (* b (- x2 x1))))
	    z1)
    (list (* 0.5 (- (+ x1 x2)
		    (* b (- y2 y1))))
	  (* 0.5 (+ (+ y1 y2)
		    (* b (- x2 x1))))
	  )
    ))
